{
  "manifest_version": 3,
  "version": "1.0.0",
  "short_name": "Extension App",
  "name": "Redesigning Online Discourse",
  "action": {
    "default_title": "Click Me", 
    "default_popup": "index.html",
    "default_width": 400,
    "default_height": 600
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["static/js/contentScript.js"]
    }
  ],
  "start_url": ".",
  "display": "standalone",
  "theme_color": "#000000",
  "background_color": "#ffffff"
}